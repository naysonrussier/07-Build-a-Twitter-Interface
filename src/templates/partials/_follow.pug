//List to create for each
each follow in followings
  li
    .circle--fluid
      .circle--fluid--cell.circle--fluid--primary
        a.app--tweet--author
          .app--avatar(style='background-image: url(' + follow.profile_image_url + ')')
            img(src=follow.profile_image_url)
          h4 #{follow.name}
          p @#{follow.screen_name}
      .circle--fluid--cell
        if follow.following
          a.button.button-text Unfollow
        if !follow.following
          a.button Follow